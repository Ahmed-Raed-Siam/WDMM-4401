<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
<!--    <style name="Theme.Homework3_Application1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">-->
    <style name="Theme.Homework3_Application1" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="my_text_view" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/arimo</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="my_input" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/arimo</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/input_color</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColorHint">@color/input_hint_color</item>
    </style>

</resources>