<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Homework3_Application2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="my_text_view" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/el_messiri</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="my_input" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/el_messiri</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/holo_orange_dark</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/input_border</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/style_spinner</item>
    </style>

    <style name="submitButton" parent="Widget.AppCompat.Light.ActionButton">
        <item name="fontFamily">@font/el_messiri</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:background">@drawable/style_btn</item>
    </style>

    <style name="graduate_switch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="fontFamily">@font/el_messiri</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="switchPadding">5dp</item>
        <item name="switchMinWidth">64dp</item>
    </style>

</resources>